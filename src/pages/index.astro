---
import Main from "../layouts/Main.astro";
import * as content from "../content/pages/index.md"
import Banner from "../components/Banner.jsx"
import ServicesWidget from "../components/ServicesWidget.jsx"
import ComparisonTable from "../components/ComparisonTable.jsx"
import Prompt from "../components/Prompt.astro"

const {title, banner, services, comparisonChart} = content.frontmatter
---

<Main title="Web Development | Web Design | Brand Design | Alex Christodoulou" footerColor="bg-slate-dark">
    <Banner client:load
        content={banner}
    />

    <ServicesWidget client:visible
        content={services}
    />

    <ComparisonTable client:visible
        content={comparisonChart}
    />

    <Prompt />

</Main>