---
import Section from "../general/Section.astro";
import PromptButton from "./PromptButton"
import * as content from "../../content/prompt.md"
import triangle from "/src/images/triangle.svg"

const {headline, text, customRequest} = content.frontmatter
---

<div class="bg-slate-dark text-white ">

    <section>
        <div class="container flex justify-between">

            <div class="flex flex-col gap-5 max-w-xl">
                <h2 class="font-bold text-4xl text-blue">{headline}</h2>
                <p class="w-[80%]">{text}</p>
                <PromptButton client:visible/>
            </div>
    
            <div class="max-w-sm p-5 rounded-3xl bg-[#2f3136] relative">
                <h4 class="my-0 opacity-80">{customRequest.heading}</h4>
                <p class="opacity-80">{customRequest.text}</p>
                <img src={triangle.src} class="absolute -bottom-12 right-5 w-16 h-12" />
            </div>
            
        </div>


    </section>


</div>