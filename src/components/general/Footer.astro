---
import * as assets from "/src/content/general/assets.md"
import * as content from "/src/content/general/links.md"

const {footerLink} = content.frontmatter
const {headerLogo} = assets.frontmatter
const { color } = Astro.props
---

<footer class=`${color} text-white`>
    <section class="pt-0">

        <div class="container">

            <div class="box-border w-full px-5 mb-5 h-px bg-white bg-opacity-70" />

            <div class="flex justify-between items-start mb-5">

                <div class="flex flex-col gap-5 items-start sm:flex-row sm:items-center">
                    <a href="/"><img src={headerLogo} class=`w-12`></a>

                    {footerLink.map((link, i) => (
                            <a href={link.url} target="_blank" class="opacity-70 hover:opacity-100">
                                {link.displayText}
                            </a>
                    ))}

                </div>

                <p class="opacity-70 text-right">Alex Christodoulou Â© 2023</p>

            </div>

        </div>
    </section>
</footer>